page {
  height: 100%;
  width: 100%;
}

.content {
  height: 30%;
  width: 100%;
  
}

.movies {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #3a3a3a;
  font-size: 14px;
}

.movies-item {
  height: 120px;
  width: 100%;
  display: flex;
  flex-direction: row;
  /*border-bottom: 1px solid white;*//*outline: 1px solid white;*/
}

.poster image {
  height: 100%;
  width: 187.5rpx;
}

.movies-info {
  height: 100%;
  width: 562.5rpx;
  display: flex;
  flex-direction: column;
  margin: 20px 0 0 5%;
  color: white;
}

.hr {
  height: 1px;
  width: 100%;
  background: black;
  border-top: 0.5px solid white;
  border-bottom: 0.5px solid white;
}
